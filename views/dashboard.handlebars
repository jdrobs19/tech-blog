<section>
    <h2>Create New Post</h2>

    <form class="new-post-form">
        <div>
            <label for="post-title">Title:</label>
            <input type="text" id="post-title" name="post-title" />
        </div>
        <div>
            <label for="post-text">Text:</label>
            <textarea id="post-text" name="post-text"></textarea>
        </div>
        <button type="submit" class="btn">Create</button>
    </form>
</section>


<div class="card-body">
    {{#each posts}}
    <div class="card"><a href="/post/{{this.id}}">
        <h2>{{this.title}}</h2>
        <p class="card-content">{{this.text}}</p>
        <p class="card-foot"> Posted By: {{this.user.username}} on {{format_date this.created_at}}</p>
    </a>
    <a href="/dashboard/edit/{{this.id}}"><button>Edit Post</button></a>
    </div>
    {{/each}}
</div>

<script src="/javascript/add-post.js"></script>